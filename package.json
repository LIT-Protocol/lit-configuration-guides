{
  "name": "lit-configuration-guides",
  "private": true,
  "workspaces": [
    "lit",
    "nextjs",
    "preact",
    "reactjs",
    "svelte",
    "vite-react",
    "vuejs",
    "lib"
  ],
  "scripts": {
    "update:alpha": "yarn workspace lit-client-setup upgrade @lit-protocol/lit-node-client@alpha",
    "update:beta": "yarn workspace lit-client-setup upgrade @lit-protocol/lit-node-client@beta",
    "update:latest": "yarn workspace lit-client-setup upgrade @lit-protocol/lit-node-client@latest",
    "install:all": "yarn install --workspaces",
    "run:all": "lerna run dev",
    "run:lit": "lerna run dev --scope lit",
    "run:nextjs": "lerna run dev --scope nextjs",
    "run:preact": "lerna run dev --scope preact",
    "run:reactjs": "lerna run dev --scope reactjs",
    "run:vite-react": "lerna run dev --scope vite-react",
    "run:vuejs": "lerna run dev --scope vuejs"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.1.8"
  }
}
